<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".product_add">


    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        />


    <ImageView
        android:id="@+id/image_vi"
        android:layout_width="match_parent"
        android:layout_height="190dp"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/category_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            />

    </RelativeLayout>
    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"

        >

        <TextView
            android:id="@+id/d"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:layout_below="@id/d"
            android:textSize="15sp"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/de"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Model Detail"
            android:layout_toRightOf="@id/d"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"


            />



        <TextView
            android:id="@+id/model_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/de"
            android:layout_toRightOf="@id/d"
            android:text="Model Details"
            android:textSize="15sp"
            android:layout_marginTop="10sp"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        >



        <TextView
            android:id="@+id/det"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"



            />

        <TextView
            android:id="@+id/detail_view"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:layout_below="@id/det"
            android:textSize="15sp"
            android:layout_marginTop="10sp"

            />

        <TextView
            android:id="@+id/p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_toRightOf="@id/det"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/price_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_below="@id/p"
            android:layout_toRightOf="@id/det"
            android:textSize="15sp"
            android:layout_marginTop="10sp"

            />

    </RelativeLayout>

</LinearLayout>